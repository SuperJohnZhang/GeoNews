<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/wallet_bright_foreground_holo_dark"
    tools:context="com.example.superjohn.geonews.FieldFilterActivity">




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <CheckBox android:id="@+id/BusinessFieldActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Business"
            android:onClick="TagBusiness"/>
        <CheckBox android:id="@+id/EngineerFieldActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engineering"
            android:onClick="TagEngineer"/>
        <CheckBox android:id="@+id/ScienceFieldActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science"
            android:onClick="TagScience"/>
    </LinearLayout>

    <Button
        android:id="@+id/ResetFieldButton"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="0dp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Reset"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:onClick=""
        />

    <Button
        android:id="@+id/ConfirmFieldButton"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="180dp"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Confirm"
        android:background="@color/wallet_bright_foreground_holo_dark"
        android:onClick=""
        />

</RelativeLayout>
